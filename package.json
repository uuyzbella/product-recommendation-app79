{
  "name": "product-review-agent",
  "version": "1.0.0",
  "description": "基于AI的商品测评推荐Agent，支持多平台数据聚合与真伪评价识别",
  "main": "src/main.js",
  "scripts": {
    "start": "node src/main.js",
    "api": "node src/api/server.js",
    "api:dev": "nodemon src/api/server.js",
    "web": "node src/ui/WebInterface.js",
    "dev": "nodemon src/ui/WebInterface.js",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "jest tests/unit --verbose",
    "test:integration": "jest tests/integration --verbose",
    "lint": "eslint src/ --ext .js",
    "lint:fix": "eslint src/ --ext .js --fix",
    "format": "prettier --write \"src/**/*.js\"",
    "docs": "jsdoc -c jsdoc.conf.json",
    "build": "echo 'Building project...' && npm run lint && npm run test",
    "clean": "rimraf node_modules package-lock.json",
    "install:clean": "npm run clean && npm install"
  },
  "keywords": [
    "product-recommendation",
    "e-commerce",
    "ai-agent",
    "review-analysis",
    "multi-platform",
    "react-agent",
    "taobao",
    "temu",
    "xiaohongshu",
    "reddit",
    "fake-review-detection"
  ],
  "author": {
    "name": "Product Review Agent Team",
    "email": "contact@product-review-agent.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/product-review-agent/product-review-agent.git"
  },
  "bugs": {
    "url": "https://github.com/product-review-agent/product-review-agent/issues"
  },
  "homepage": "https://github.com/product-review-agent/product-review-agent#readme",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.57.0",
    "axios": "^1.6.0",
    "bcrypt": "^5.1.1",
    "cheerio": "^1.0.0-rc.12",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "langfuse": "^3.38.5",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "natural": "^6.7.0",
    "node-cron": "^3.0.3",
    "puppeteer": "^21.5.2",
    "rate-limiter-flexible": "^5.0.0",
    "redis": "^4.6.10",
    "sentiment": "^5.0.2",
    "sqlite3": "^5.1.6",
    "uuid": "^9.0.1",
    "validator": "^13.11.0",
    "winston": "^3.11.0",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "eslint": "^8.54.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-node": "^11.1.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jsdoc": "^4.0.2",
    "lint-staged": "^15.1.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/ui/public/**",
      "!src/**/*.config.js"
    ]
  },
  "eslintConfig": {
    "extends": [
      "standard"
    ],
    "env": {
      "node": true,
      "es2022": true,
      "jest": true
    },
    "rules": {
      "semi": [
        "error",
        "always"
      ],
      "quotes": [
        "error",
        "single"
      ],
      "no-console": "off",
      "no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_"
        }
      ]
    }
  },
  "prettier": {
    "singleQuote": true,
    "semi": true,
    "tabWidth": 2,
    "trailingComma": "none",
    "printWidth": 100
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "nodemonConfig": {
    "watch": [
      "src/"
    ],
    "ext": "js",
    "ignore": [
      "src/ui/public/",
      "tests/",
      "*.test.js"
    ],
    "env": {
      "NODE_ENV": "development"
    }
  }
}
